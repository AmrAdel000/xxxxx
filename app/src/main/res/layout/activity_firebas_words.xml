<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate"
    android:layoutDirection="rtl">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/barr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="#00FFFFFF"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Notes">

        <com.google.android.material.appbar.CollapsingToolbarLayout

            android:id="@+id/collapsing_toolbarr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="right"
            app:contentScrim="@color/white100"
            app:expandedTitleMarginTop="@dimen/_204sdp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="حفظ">


            <EditText
                android:id="@+id/wefwefwf"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_81sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:background="#007E91AF"
                android:gravity="center"
                android:hint="جميع الكلمات المتوفره حاليا"
                android:padding="@dimen/_11sdp"
                android:textColor="@color/main1title"
                android:textColorHint="@color/hint2"
                android:textSize="@dimen/_20sdp"
                app:layout_collapseMode="parallax" />



            <ImageButton
                android:id="@+id/rthrthrthrht"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_125sdp"
                android:onClick="menuee2"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@drawable/ic_baseline_more_vert_24"
                android:textColor="#20262F"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_69sdp"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/nesteddfdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        app:layout_anchorGravity="center_horizontal"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>