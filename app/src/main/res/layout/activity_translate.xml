<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate"
    android:layoutDirection="rtl">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/barr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_228sdp"
        android:background="#00FFFFFF"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Notes">

        <com.google.android.material.appbar.CollapsingToolbarLayout

            android:id="@+id/collapsing_toolbarr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="right"
            app:contentScrim="@color/white100"
            app:expandedTitleMarginTop="@dimen/_204sdp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="حفظ">

            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/_225sdp"
                android:background="@color/main2textvew2"
                android:layout_marginRight="@dimen/_14ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/texevew22"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_105sdp"
                android:background="#007E91AF"
                android:gravity="center"
                android:onClick="menuee"
                android:text="ترجمه الي اللغة الانجليزيه "
                android:textColor="@color/main2textvew2"
                app:layout_collapseMode="parallax" />

            <EditText
                android:id="@+id/texevew1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_81sdp"
                android:layout_marginTop="@dimen/_23sdp"
                android:background="#007E91AF"
                android:gravity="center"
                android:hint="إضغط للترجمه"
                android:padding="@dimen/_11sdp"
                android:textColor="@color/main1title"
                android:textColorHint="@color/hint2"
                android:textSize="@dimen/_25sdp"
                app:layout_collapseMode="parallax" />

            <EditText
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_130sdp"
                android:background="#007E91AF"
                android:gravity="center"
                android:padding="@dimen/_11sdp"
                android:textColor="#346AC2"
                android:textSize="20dp"
                app:layout_collapseMode="parallax" />

            <Button
                android:id="@+id/buttoncv"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_53sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_172sdp"
                android:onClick="btn_savee"
                android:text="حفظ"
                android:textColor="@color/buttontextcolor"
                android:textSize="@dimen/_9sdp"
                app:backgroundTint="@color/buttoncolor"
                app:cornerRadius="@dimen/_69sdp" />

            <Button
                android:id="@+id/button"
                android:layout_width="@dimen/_46sdp"
                android:layout_height="@dimen/_53sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_172sdp"
                android:onClick="btn_savee"
                android:text="ترجمه"
                android:textColor="@color/buttontextcolor"
                android:textSize="@dimen/_9sdp"
                app:backgroundTint="@color/buttoncolor"
                app:cornerRadius="@dimen/_69sdp" />
            <ImageButton
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_marginRight="@dimen/_133sdp"
                android:onClick="btn_main"
                android:background="@drawable/ic_icons8_back_200"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed" />

            <ImageButton
                android:id="@+id/buttonv"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_21sdp"
                android:layout_marginTop="@dimen/_193sdp"
                android:onClick="menuee2"
                android:layout_marginRight="@dimen/_4sdp"
                android:background="@drawable/ic_baseline_more_vert_24"
                android:textColor="#20262F"
                android:textSize="@dimen/_12sdp"
                app:cornerRadius="@dimen/_69sdp"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_4sdp"
        app:layout_anchorGravity="center_horizontal"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>